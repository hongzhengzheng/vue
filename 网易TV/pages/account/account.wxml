<scroll-view scroll-y="true">
        <view class="header">
            <block wx:if="{{login}}">
                <view class="hd-left">
                    <navigator url="" class="login" >
                        <view>
                            <image class="userPic" src="{{userInfo.avatarUrl}}" style="margin:7px;vertical-align:middle;width:60px;height: 60px"></image>
                        </view>
                    </navigator>
                </view>
                <view class="hd-right">
                        <text class="userName" >{{userInfo.nickName}}</text>
                        <text class="account-register">正使用 “QQ” 账号登录</text>
                </view>
            </block>
            <block wx:else></block>
        </view>
